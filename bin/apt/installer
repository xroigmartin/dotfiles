#!/usr/bin/env bash

install_package() {
	sudo apt install -y $1 > /dev/null 2>&1
}

install_dependencies(){
	echo "Installing dependencies"
	sudo apt-get install -y libxcb-xinerama0-dev \
						    libxcb-icccm4-dev \
						    libxcb-randr0-dev \
						    libxcb-util0-dev \
						    libxcb-ewmh-dev \
						    libxcb-keysyms1-dev \
						    libxcb-shape0-dev > /dev/null 2>&1
}

install_dependencies;

install_make;

install_bspwm_sxhkd;
