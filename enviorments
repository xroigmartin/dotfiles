#!/usr/bin/env bash
export CONFIG_FOLDER=$HOME/.config

export DOTFILES_FOLDER=$HOME/.dotfiles

export DOTFILES_HOME_FOLDER=$DOTFILES_FOLDER/home

export PACKAKE_MANAGER=apt

export DISTRO_NAME=Ubuntu

################
#   DISTROS    #
################

export UBUNTU_DISTRO=Ubuntu
export FEDORA_DISTRO=Fedora

##############
# BIN FOLDER #
##############
export DOTFILES_BIN_FOLDER=$DOTFILES_FOLDER/bin
export DOTFILES_BIN_SHARE_FOLDER=$DOTFILES_BIN_FOLDER/share
export DOTFILES_BIN_SHARE_ZSH_FOLDER=$DOTFILES_BIN_SHARE_FOLDER/zsh
export DOTFILES_BIN_SHARE_ZSH_POWER_LEVEL_10K=$DOTFILES_BIN_SHARE_ZSH_FOLDER/powerlevel10k
export DOTFILES_BIN_SHARE_FONTS_FOLDER=$DOTFILES_BIN_SHARE_FOLDER/fonts
export DOTFILES_BIN_SHARE_FONTS_HACK_NERD_FONT_FOLDER=$DOTFILES_BIN_SHARE_FONTS_FOLDER/hack_nerd_font


##################
# CONFIG FOLDERS #
##################
export DOTFILES_CONFIG_FOLDER=$DOTFILES_FOLDER/config
export DOTFILES_CONFIG_ZSH_FOLDER=$DOTFILES_CONFIG_FOLDER/zsh
export DOTFILES_CONFIG_ZSH_POWERLEVEL10K_FOLDER=$DOTFILES_CONFIG_ZSH_FOLDER/powerlevel10k

################
# REPO FOLDERS #
################
export POWER_LEVEL_10K_FOLDER_REPO=$HOME/powerlevel10k