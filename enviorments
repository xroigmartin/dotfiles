#!/usr/bin/env bash
export CONFIG_FOLDER=$HOME/.config
export CONFIG_BSPWM_FOLDER=$CONFIG_FOLDER/bspwm
export CONFIG_SXHKD_FOLDER=$CONFIG_FOLDER/sxhkd

export DOTFILES_FOLDER=$HOME/.dotfiles

export DOTFILES_CONFIG_FOLDER=$DOTFILES_FOLDER/config
export DOTFILES_HOME_FOLDER=$DOTFILES_FOLDER/home

export DOTFILES_BIN_FOLDER=$DOTFILES_FOLDER/bin

export DOTFILES_BIN_APT_FOLDER=$DOTFILES_BIN_FOLDER/apt

export DOTFILES_BIN_SHARE_FOLDER=$DOTFILES_BIN_FOLDER/share
export DOTFILES_BIN_SHARE_BSPWM_FOLDER=$DOTFILES_BIN_SHARE_FOLDER/bspwm
export DOTFILES_BIN_SHARE_MAKE_FOLDER=$DOTFILES_BIN_SHARE_FOLDER/make
export DOTFILES_BIN_SHARE_COMPTON_FOLDER=$DOTFILES_BIN_SHARE_FOLDER/compton
export DOTFILES_BIN_SHARE_FEH_FOLDER=$DOTFILES_BIN_SHARE_FOLDER/feh
export DOTFILES_BIN_SHARE_ROFI_FOLDER=$DOTFILES_BIN_SHARE_FOLDER/rofi

export BSPWM_FOLDER_REPO=$HOME/bspwm
export BSPWM_CONFIG_FOLDER=$DOTFILES_CONFIG_FOLDER/bspwm

export SXHKD_FOLDER_REPO=$HOME/sxhkd
export SXHKD_CONFIG_FOLER=$DOTFILES_CONFIG_FOLDER/sxhkd
